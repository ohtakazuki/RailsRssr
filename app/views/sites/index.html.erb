<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Sites</h1>
      
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Url</th>
            <th>Max count</th>
            <th colspan="3"></th>
          </tr>
        </thead>
      
        <tbody>
          <% @sites.each do |site| %>
            <tr>
              <td><%= site.name %></td>
              <td><%= site.url %></td>
              <td><%= site.max_count %></td>
              <td><%= link_to 'Show', site %></td>
              <td><%= link_to 'Edit', edit_site_path(site) %></td>
              <td><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <br>
      
      <%= link_to 'New Site', new_site_path %>
    </div>
  </div>
</div>
